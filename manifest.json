{
  "manifest_version": 3,
  "name": "Window Merge",
  "version": "1.0.0",
  "description": "複数のChromeウィンドウを1つにまとめる（タブグループ・ピン留め保持）",
  "permissions": ["tabs", "tabGroups"],
  "commands": {
    "merge-windows": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "ウィンドウをまとめる"
    }
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ウィンドウをまとめる (Ctrl+Shift+M)"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
